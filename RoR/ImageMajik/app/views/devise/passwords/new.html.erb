<div >
	<div class="jumbotron" style="width:50%; margin-left:auto; margin-right:auto">
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	<h2 class="form-signin-heading">Forgot your password?</h2>

	  <%= devise_error_messages! %>

	  	<div><%= f.label :email,class:'form-signin-heading' %><br />
	 	 	<%= f.email_field :email, autofocus: true,class:'form-control'  %>
	    </div>

	  	<div><%= f.submit "Send me reset password instructions", class:'btn btn-lg btn-primary btn-block', style:'height:40px;margin-top:10px' %>
	  	</div>
	<% end %>

	<%= render "devise/shared/links" %>

	</div>
</div>
